{
    "cmake.configureOnOpen": false,
    "python.formatting.provider": "autopep8",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/__init__.py": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/env": true,
        "Manifold": true
    },
    "python.languageServer": "Pylance"
}